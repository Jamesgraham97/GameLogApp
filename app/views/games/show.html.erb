
<div class="container">
  <h1 class="mt-4"><%= @game.title %></h1>

  <p class="mb-2"><strong>Platform:</strong> <%= @game.platform %></p>
  <p class="mb-2"><strong>Completed:</strong> <%= @game.completed ? 'Yes' : 'No' %></p>

  <% if @game.completed %>
    <p class="mb-2"><strong>Review:</strong> <%= @game.review %></p>
  <% end %>

  <% if @game.rating.present? %>
    <p class="mb-4"><strong class="mr-2">Rating:</strong> <%= @game.rating %>/5</p>
  <% else %>
    <p class="mb-4">No rating available.</p>
  <% end %>

  <div class="btn-group">
    <%= link_to 'Edit', edit_game_path(@game), class: "btn btn-primary" %>
    <%= link_to 'Back', games_path, class: "btn btn-secondary" %>
  </div>
</div>
</div>
