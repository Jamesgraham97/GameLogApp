<div class="container">
  <%= form_with(model: @game, local: true) do |form| %>
    <% if @game.errors.any? %>
      <div class="alert alert-danger" id="error_explanation">
        <h2><%= pluralize(@game.errors.count, "error") %> prohibited this game from being saved:</h2>

        <ul>
          <% @game.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="row">
      <div class="col-md-6 mb-3">
        <%= form.label :title, class: "form-label" %>
        <%= form.text_field :title, class: "form-control" %>
      </div>

      <div class="col-md-6 mb-3">
        <%= form.label :platform, class: "form-label" %>
        <%= form.text_field :platform, class: "form-control" %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6 mb-3 form-check">
        <%= form.check_box :completed, class: "form-check-input" %>
        <%= form.label :completed, class: "form-check-label ms-2" %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12 mb-3">
        <%= form.label :review, class: "form-label" %>
        <%= form.text_area :review, class: "form-control" %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6 mb-3">
        <%= form.label :rating, class: "form-label" %>
        <%= form.number_field :rating, step: 0.1, min: 0, max: 5, class: "form-control" %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12 mb-3">
        <%= form.submit "Save", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
